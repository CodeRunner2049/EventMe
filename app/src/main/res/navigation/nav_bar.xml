<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bar"
    app:startDestination="@id/explorePage">

    <fragment
        android:id="@+id/explorePage"
        android:name="com.example.eventme.ExplorePage"
        android:label="fragment_explore_page"
        tools:layout="@layout/fragment_explore_page" />
    <fragment
        android:id="@+id/mapPage"
        android:name="com.example.eventme.mapPage"
        android:label="fragment_map_page"
        tools:layout="@layout/fragment_map_page" />
    <fragment
        android:id="@+id/profilePage"
        android:name="com.example.eventme.profilePage"
        android:label="fragment_profile_page"
        tools:layout="@layout/fragment_profile_page" >
        <action
            android:id="@+id/action_profilePage_to_registerPage"
            app:destination="@id/registerPage"
            app:launchSingleTop="false" />
    </fragment>

    <fragment
        android:id="@+id/registerPage"
        android:name="com.example.eventme.registerPage"
        android:label="fragment_register_page"
        tools:layout="@layout/fragment_register_page" />
    <fragment
        android:id="@+id/loginPage"
        android:name="com.example.eventme.LoginPage"
        android:label="fragment_login_page"
        tools:layout="@layout/fragment_login_page" />
</navigation>